<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
  <meta charset="utf-8"><title>Contact — HorizonMotors</title>
  <link rel="stylesheet" href="/css/site.css" th:href="@{/css/site.css}">
  <style>
    .hero-contact{
      background:linear-gradient(180deg,rgba(7,10,14,.6),rgba(7,10,14,.9)), url("/img/hero/showroom.jpg") center/cover no-repeat;
      min-height:320px; display:flex; align-items:flex-end; padding:42px 0;
      border-bottom:1px solid #1b2430;
    }
    .pill{display:inline-flex;align-items:center;border:1px solid #283444;border-radius:999px;padding:6px 12px;font-size:12px;color:#a8b6c6;gap:8px}
    .grid-2{display:grid;grid-template-columns:1.1fr .9fr;gap:18px}
    @media (max-width:900px){ .grid-2{grid-template-columns:1fr} }
    .contact-card{padding:18px;border-radius:16px;border:1px solid #222b36;background:#0b1118}
    .hours table{width:100%;border-collapse:collapse}
    .hours td{padding:6px 0;border-bottom:1px dashed #1f2a36;color:#a8b6c6}
    .map{width:100%;height:260px;border-radius:14px;border:1px solid #283444;overflow:hidden}
    .toast{position:fixed;right:16px;bottom:16px;background:#0b1118;border:1px solid #283444;border-radius:12px;
           padding:12px 14px;display:none;box-shadow:0 10px 30px rgba(0,0,0,.35)}
  </style>
</head>
<body>
<header class="topbar">
  <div class="container inner">
    <a href="/" class="brand"><img src="/img/logo.svg" width="28" height="28" alt=""><span>Horizon<span class="accent">Motors</span></span></a>
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/browse">Browse</a>
      <a href="/featured">Featured</a>
      <a href="/financing">Financing</a>
      <a href="/contact" class="active">Contact</a>
    </nav>
  </div>
</header>

<section class="hero-contact">
  <div class="container">
    <div class="pill"><span class="dot" style="width:6px;height:6px;border-radius:999px;background:var(--accent)"></span>By appointment & walk-ins</div>
    <h1 style="margin:10px 0 6px">Talk to a Specialist</h1>
    <p class="muted" style="max-width:620px">Sales • Financing • Trade-In • Consignment. Our team will reach out within the same business day.</p>
  </div>
</section>

<main class="section">
  <div class="container grid-2">
    <!-- Left: showroom + info -->
    <div class="contact-card">
      <h2 style="margin:0 0 10px">Showroom</h2>
      <div class="grid" style="display:grid;grid-template-columns:1fr 1fr;gap:14px">
        <div>
          <div class="muted">Visit</div>
          <div>1200 Lakeshore Blvd W<br>Toronto, ON</div>
          <div style="margin-top:10px" class="muted">Call</div>
          <div><a href="tel:+14165551234">(416) 555-1234</a></div>
          <div style="margin-top:10px" class="muted">Email</div>
          <div><a href="mailto:sales@horizonmotors.ca">sales@horizonmotors.ca</a></div>
        </div>
        <div class="hours">
          <div class="muted">Hours</div>
          <table>
            <tr><td>Mon–Fri</td><td style="text-align:right">10:00–19:00</td></tr>
            <tr><td>Saturday</td><td style="text-align:right">10:00–17:00</td></tr>
            <tr><td>Sunday</td><td style="text-align:right">By appointment</td></tr>
          </table>
        </div>
      </div>

      <div style="display:flex;gap:10px;margin-top:14px">
        <div class="badge"><span class="dot"></span>OMVIC Compliant</div>
        <div class="badge"><span class="dot"></span>No hidden fees</div>
        <div class="badge"><span class="dot"></span>24+ lenders</div>
      </div>

      <div class="map" style="margin-top:14px">
        <!-- Replace with your map embed if you want -->
        <iframe
          title="Map"
          width="100%" height="100%" frameborder="0" style="border:0"
          src="https://www.google.com/maps?q=1200%20Lakeshore%20Blvd%20W%20Toronto&output=embed" allowfullscreen>
        </iframe>
      </div>
    </div>

    <!-- Right: form -->
    <div class="contact-card">
      <h2 style="margin:0 0 10px">Send a Message</h2>
      <form id="cform" th:action="@{/contact/send}" method="post" onsubmit="return validateAndToast()">
        <div style="display:grid;grid-template-columns:1fr 1fr;gap:12px">
          <div>
            <label>Name*</label>
            <input type="text" name="name" required placeholder="Alex Driver">
          </div>
          <div>
            <label>Email*</label>
            <input type="email" name="email" required placeholder="alex@email.com">
          </div>
          <div>
            <label>Phone</label>
            <input type="tel" name="phone" placeholder="(416) 555-1234">
          </div>
          <div>
            <label>Reason</label>
            <select name="reason">
              <option>Sales Inquiry</option>
              <option>Financing</option>
              <option>Trade-In</option>
              <option>Consignment</option>
              <option>Other</option>
            </select>
          </div>
          <div style="grid-column:1 / -1">
            <label>Message*</label>
            <textarea name="message" required rows="6" placeholder="Which vehicle or service are you interested in?"></textarea>
          </div>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center;margin-top:12px">
          <div class="muted" style="font-size:12px">We respond the same business day.</div>
          <button class="btn primary" type="submit">Send Message</button>
        </div>
      </form>
    </div>
  </div>
</main>

<div id="toast" class="toast">Thanks — sending your inquiry…</div>

<script>
  function validateAndToast(){
    const f = document.getElementById('cform');
    if(!f.checkValidity()){
      f.reportValidity();
      return false;
    }
    const t = document.getElementById('toast');
    t.style.display = 'block';
    setTimeout(()=>{ t.style.display='none'; }, 2200);
    // let the POST proceed to /contact/send (server shows contact-success)
    return true;
  }
</script>
</body>
</html>
